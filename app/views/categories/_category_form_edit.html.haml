= form_for :category, url: category_path(@category), method: :patch do |f|
  - if @category.errors.any?
    %div.error
      = pluralize(@category.errors.count, "error")

    - @category.errors.full_messages.each do |msg|
      %li
        = msg

  %div.row
    %div.twelve.columns
      =f.label :name
      =f.text_field :name, :class =>'u-full-width'
      =f.label :description
      =f.text_area :description, :class =>'u-full-width'
  =f.submit "Update Category", :class => "button-primary"

