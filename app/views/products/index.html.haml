%h1 All Products
= link_to 'Add', new_product_path
%table
  %tr
    %th Name
    %th Description
    %th{:colspan => "2"}
  - @products.each do |product|
    %tr
      %td= product.name
      %td= product.description
      %td= link_to 'Show', product_path(product)
      %td= link_to 'Edit', edit_product_path(product)

